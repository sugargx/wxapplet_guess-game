/* 页面 */
page{
  width: 100%;
  height: 100%;
  background:#305692;
}

/* 提示获胜次数 */
.game{
  text-align: center;
  margin-top: 40rpx;
}
.game .info{
  display: inline-flex;
  font-size: 40rpx;
}
.game .wintimestyle{
  color: red;
  font-size: 45rpx;
}

/* 猜拳结果 */
.result{
  /* 弹性工具 */
  display: flex;
  justify-content: space-around;
  /* align-items: center; */
  margin-top: 60rpx;
}
.result image{
  width:120rpx;
  height: 120rpx;
  background: #ccc;
  border-radius: 8rpx;
}
.result .resinfostyle{
  margin-top: 30rpx;
  color: #fff;
}

/* 选择出拳面板 */
.select-options-panel{
  padding-top: 40rpx;
  width: 660rpx;
  height: 660rpx;
  background: rgba(255,255, 255, 0.6) ;
  margin: 100rpx auto;
  text-align: center;
}
.select-options-panel .slogan{
  color: #fff;
  font-size: 60rpx;
  line-height: 65rpx;
}
.select-options{
  margin-top: 80rpx;
  /* 几个图片均匀分开 */
  display: flex;
  justify-content: space-around;
}
.select-options image{
  width: 160rpx;
  height: 160rpx;
}
.startbtn{
  margin-top: 50rpx;
  width: 70%;
}
